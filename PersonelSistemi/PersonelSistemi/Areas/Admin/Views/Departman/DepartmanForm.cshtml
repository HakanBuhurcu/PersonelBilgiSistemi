@model PersonelSistemi.Models.Departmanlar
@{
    ViewBag.Title = "Departman Formu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="Mesaj" style="display: none;"></div>
<h2>Departman Formu</h2>
@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Mesaj", OnSuccess = "ResetForm()" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(model => model.DepAd, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DepAd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Departman Adını Giriniz", maxlength = 50 } })
                    @Html.ValidationMessageFor(model => model.DepAd, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.DepID)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    
                    <input type="submit" value="Kaydet" id="kaydet" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}
