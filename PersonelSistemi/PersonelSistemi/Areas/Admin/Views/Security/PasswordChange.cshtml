@model PersonelSistemi.Models.Kullanicilar
@{
    ViewBag.Title = "Parola Değitiştir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div id="Mesaj" style="display: none;"></div>

<h2>Şifre Değiştir</h2>
@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Mesaj", OnSuccess = "ResetForm()" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                @Html.PasswordFor(m => m.Parola, new { @class = "form-control", @placeholder = "Yeni şifre giriniz.", id = "password", maxlength = 50 })
                @Html.ValidationMessageFor(m => m.Parola, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.TekrarParola, new { @class = "form-control ", @placeholder = "Tekrar Giriniz.", id = "confirmpassword", maxlength = 50 })
                @Html.ValidationMessageFor(m => m.TekrarParola, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="submitbuton" value="Kaydet" class="btn btn-success" />
                </div>
            </div>



        </div>
    </div>


}

@section scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}

