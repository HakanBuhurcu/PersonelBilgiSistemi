@model PersonelSistemi.Models.Personeller
@{
    ViewBag.Title = "Personel Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="card">
        <div class="card-body">
            <h4>Personel Detayları</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Ad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Soyad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Soyad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Departmanlar.DepAd)
                </dt>


                <dd>
                    @Html.DisplayFor(model => model.Departmanlar.DepAd)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Personeller2)
                </dt>


                <dd>
                    @if (Model.Personeller2 == null)
                    {
                        @:Yok
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.Personeller2.Ad)
                        @:
                        @Html.DisplayFor(model => model.Personeller2.Soyad)
                    }

                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.Telefon)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telefon)
                </dd>

            </dl>

            @Html.ActionLink("Listeye geri dön", "Index")
            
        </div>
    </div>
   



